# Environment Configuration for Jarvis AI Assistant

# Application Settings
JARVIS_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# API Keys (Replace with your actual API keys)
OPENWEATHER_API_KEY=your_openweather_api_key_here
NEWS_API_KEY=your_news_api_key_here
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key_here

# HuggingFace Chat
HUGGINGFACE_COOKIE_PATH=backend/cookie.json

# Database Configuration
DB_PATH=jarvis.db
DB_BACKUP_PATH=backup/jarvis_backup.db

# Server Configuration
HOST=localhost
PORT=8000
MODE=None

# Audio Configuration
AUDIO_DEVICE_INDEX=0
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024

# Voice Recognition
VOICE_LANGUAGE=en-US
VOICE_RATE=174
VOICE_VOLUME=0.9

# Security
ENABLE_FACE_AUTH=true
ALLOW_REMOTE_ACCESS=false
SESSION_TIMEOUT=3600

# Feature Flags
ENABLE_WEATHER=true
ENABLE_CALENDAR=true
ENABLE_NOTES=true
ENABLE_NEWS=true
ENABLE_SMART_HOME=false

# Logging
LOG_FILE_PATH=logs/jarvis.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Performance
MAX_CONCURRENT_REQUESTS=10
CACHE_DURATION=300
API_RATE_LIMIT=60

# File Paths
RECORDINGS_PATH=data/recordings
MODELS_PATH=data/models
TEMP_PATH=data/temp